<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="registry_view_form_action" model="ir.ui.view">
        <field name="name">registry.view.form</field>
        <field name="model">motorcycle.registry</field>
        <field name="arch" type="xml">
            <form string="Course View">
                <header>
                    <h1><field name="first_name"/></h1>
                    <h1><field name="last_name"/></h1>
                </header>
                <field name="picture"/>
                
                <sheet>
                    <h1 string="Registration info"/>
                    <group>
                        <group>
                            <separator string="Identification"/>
                            <field name="vin"/>
                            <field name="license_plate"/>
                        </group>
                        <group>
                            <separator string="Miscellaneous"/>
                            <field name="current_mileage"/>
                            <field name="register_date"/>
                        </group>
                    </group>
                </sheet>
                <notebook>
                    <separator string="Linked images"/>
                    <group>
                        <separator string="Certificate title"/>
                        <field name="certificate_title"/>
                    </group>
                </notebook>
            </form>
        </field>
    </record>
</odoo>